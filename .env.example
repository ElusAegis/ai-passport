# AI Passport Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# MODEL API CONFIGURATION (Required)
# =============================================================================

# API domain - auto-detects provider (anthropic, mistral, fireworks, etc.)
MODEL_API_DOMAIN=api.anthropic.com

# API port (default: 443 for HTTPS)
MODEL_API_PORT=443

# Your API key for the model provider
MODEL_API_KEY=your-api-key-here

# =============================================================================
# PROVER CONFIGURATION
# =============================================================================

# Prover type: direct | proxy | tls-single | tls-per-message
# - direct: No proving (for development/testing)
# - proxy: Attestation via proxy server (low latency)
# - tls-single: Single TLS session, proof at end (default)
# - tls-per-message: Fresh TLS per message, proof per message
PROVER=tls-single

# =============================================================================
# NOTARY CONFIGURATION (for TLS provers)
# =============================================================================

# Notary server domain
NOTARY_DOMAIN=notary.pse.dev

# Notary server port
NOTARY_PORT=443

# Notary type: remote | remote_non_tls | ephemeral
NOTARY_TYPE=remote

# API version prefix
NOTARY_VERSION=v0.1.0-alpha.12

# Network optimization: latency | bandwidth
NOTARY_NETWORK_OPTIMIZATION=latency

# Maximum bytes for TLS session (adjust based on expected conversation size)
NOTARY_MAX_SENT_BYTES=4096
NOTARY_MAX_RECV_BYTES=16384

# =============================================================================
# PROXY CONFIGURATION (for proxy prover)
# =============================================================================

# Proxy server host
PROXY_HOST=localhost

# Proxy server port
PROXY_PORT=8443

# =============================================================================
# PROXY SERVER CONFIGURATION (if running your own proxy)
# =============================================================================

# TLS certificate and key for the proxy server
# PROXY_SERVER_TLS_CERT=/path/to/cert.pem
# PROXY_SERVER_TLS_KEY=/path/to/key.pem

# ECDSA signing key for attestations (secp256k1)
# PROXY_SERVER_SIGNING_KEY=/path/to/signing.pem

# =============================================================================
# MODEL SERVER CONFIGURATION (for local testing)
# =============================================================================

# TLS certificate and key for the mock model server
# MODEL_SERVER_TLS_CERT=/path/to/cert.pem
# MODEL_SERVER_TLS_KEY=/path/to/key.pem
